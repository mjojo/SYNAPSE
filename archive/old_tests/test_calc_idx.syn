// Test getbyte with calculated index on alloc buffer
fn main() {
    let buf = alloc(8)
    setbyte(buf, 0, 65)  // A
    setbyte(buf, 1, 66)  // B
    setbyte(buf, 2, 67)  // C
    setbyte(buf, 3, 0)
    
    // Direct index
    let c0 = getbyte(buf, 0)   // A=65
    
    // Variable index
    let i = 1
    let c1 = getbyte(buf, i)   // B=66
    
    // Calculated index  
    let start = 0
    let k = 2
    let c2 = getbyte(buf, start + k)  // C=67
    
    // 65 + 66 + 67 = 198
    return c0 + c1 + c2
}
