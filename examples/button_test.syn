fn button(bx, by, bw, bh, col, mx, my, mb) {
    // Check if mouse is inside button
    if mx >= bx {
        if mx < bx + bw {
            if my >= by {
                if my < by + bh {
                    // Draw button (simplified)
                    pixel(bx, by, col)
                    // Check click
                    if mb {
                        return 1
                    }
                }
            }
        }
    }
    return 0
}

fn main() {
    window(800, 600)
    let running = 1
    let counter = 0
    while running {
        let mx = mouse_x()
        let my = mouse_y()
        let mb = mouse_btn(0)
        clear_screen(0x0000FF)
        
        let clicked = button(10, 10, 30, 30, 0xFF0000, mx, my, mb)
        
        update_window()
        sleep(16)
        counter = counter + 1
        if counter == 100 {
            running = 0
        }
    }
    print(counter)
    return 0
}
