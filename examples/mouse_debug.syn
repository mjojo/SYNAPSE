fn main() {
    window(800, 600)
    let running = 1
    let counter = 0
    while running {
        let mx = mouse_x()
        let my = mouse_y()
        
        counter = counter + 1
        if counter == 50 {
            print(mx)
            print(my)
            counter = 0
        }
        
        // Draw persistent trail
        pixel(mx, my, 0xFFFFFF)
        
        update_window()
        sleep(16)
        
        if get_key(27) { running = 0 }
    }
    return 0
}
